<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Korex Hospital</title>
    <!-- base:css -->
    <link rel="stylesheet" href="../../font/typicons.css">
    <link rel="stylesheet" href="../../css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="icon" href="../../img/logos.jpg">
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">

        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="navbar-brand brand-logo" href="/backend/dashboard"><img src="../../img/logos.jpg" alt="logo"/></a>
          <a class="navbar-brand brand-logo-mini" href="/backend/dashboard"><img src="../../img/logos.jpg" alt="logo"/></a>
          <button class="navbar-toggler navbar-toggler align-self-center d-none d-lg-flex" type="button" data-toggle="minimize">
            <span class="typcn typcn-th-menu"></span>
          </button>
        </div>

        <%- include ('../partials/adminNav'); -%>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_settings-panel.html -->
        <div class="theme-setting-wrapper">
          <div id="settings-trigger"><i class="typcn typcn-cog-outline"></i></div>
          <div id="theme-settings" class="settings-panel">
            <i class="settings-close typcn typcn-delete-outline"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options" id="sidebar-light-theme">
              <div class="img-ss rounded-circle bg-light border mr-3"></div>
              Light
            </div>
            <div class="sidebar-bg-options selected" id="sidebar-dark-theme">
              <div class="img-ss rounded-circle bg-dark border mr-3"></div>
              Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
              <div class="tiles success"></div>
              <div class="tiles warning"></div>
              <div class="tiles danger"></div>
              <div class="tiles primary"></div>
              <div class="tiles info"></div>
              <div class="tiles dark"></div>
              <div class="tiles default border"></div>
            </div>
          </div>
        </div>
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('../partials/adminSidebar'); -%>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

              
                <%- include (`../partials/messages`); -%>

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                         <div class="card-body">
                           <h4 class="card-title">Edit Property Information</h4>
    
                           <form class="forms-sample" action="/backend/editPropertyPagePost/<%- properties._id %>" method="post" enctype="multipart/form-data">

                            <div class="form-group">
                               <label for="exampleInputName1">Agent Name</label>
                               <input type="text" class="form-control" name="contactPerson"
                               value="<%- properties.contactPerson %>" readonly/>
                            </div>
                            <div class="form-group">
                                <% let propertyType=["Apartment", "Loft", "Office","House","Bungalow","Land"] %>
                                <label for="exampleSelectGender">Select Property Type</label>
                                <select class="form-control" name="propertyType">
                                    <% propertyType.forEach((type) => { %>
                                        <option value="<%- type %>"<% if (properties && properties.propertyType === type) { %> selected<% } %>><%- type %></option>
                                    <% }) %>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleInputEmail3">Property Price</label>
                                <input type="text" class="form-control" name="amount" 
                                value="<%- properties.amount %>"/>
                            </div>

                            <div class="form-group">
                                <% let houseCondition=["New", "Renovated", "Old" ] %>
                                <label for="exampleSelectGender">Select Property Condition</label>
                                <select class="form-control" name="houseCondition">
                                    <% houseCondition.forEach((type) => { %>
                                        <option value="<%- type %>"<% if (properties && properties.houseCondition === type) { %> selected<% } %>><%- type %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="form-group">
                                <% let propertyStatus=["Shortlet", "For Rent","For Sale", "Sold" ] %>
                                <label for="exampleSelectGender">Select Property Status</label>
                                <select class="form-control" name="propertyStatus">
                                    <% propertyStatus.forEach((type) => { %>
                                        <option value="<%- type %>"<% if (properties && properties.propertyStatus === type) { %> selected<% } %>><%- type %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Agent Number</label>
                                <input type="text" class="form-control"name="agentNumber"
                                value="<%- properties.agentNumber %>" readonly/>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Address</label>
                                <input type="text" class="form-control" name="address"
                                value="<%- properties.address %>" />
                            </div>

                            <div class="form-group">
                                <% let city=["Lagos Island", "Ikeja", "Victoria Island", "Ikoyi", "Apapa", "Surulere", "Yaba", "Agege", "Ikorodu", "Badagry", "Epe", "Festac Town", "Lekki", "Ajah", "Maryland", "Oshodi", "Mushin", "Bariga", "Ojodu", "Alimosho", "Egbeda", "Ikotun", "Isheri-Olofin", "Ketu", "Isolo", "Okota", "Ojo", "Alaba"] %>
                                <label for="exampleSelectGender">Select Property City</label>
                                <select class="form-control" name="city">
                                    <% city.forEach((type) => { %>
                                        <option value="<%- type %>"<% if (properties && properties.city === type) { %> selected<% } %>><%- type %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="form-group">
                                <% let state=["Lagos", "Ogun State"] %>
                                <label for="exampleSelectGender">Select Property State</label>
                                <select class="form-control" name="state">
                                    <% state.forEach((type) => { %>
                                        <option value="<%- type %>"<% if (properties && properties.state === type) { %> selected<% } %>><%- type %></option>
                                    <% }) %>
                                </select>
                            </div>
                              
                            <div class="form-group">
                                <label for="exampleInputCity1">Country</label>
                                <input type="text" class="form-control" name="country"
                                value="<%- properties.country %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Property Heading</label>
                                <input type="text" class="form-control" name="heading" 
                                value="<%- properties.heading %>" />
                            </div>
                              
                            <div class="form-group">
                                <label for="exampleInputCity1">Size in ft</label>
                                <input type="text" class="form-control" name="sizeinFt"
                                value="<%- properties.sizeinFt %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Bedrooms</label>
                                <input type="text" class="form-control" name="bedrooms"
                                value="<%- properties.bedrooms %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Bathrooms</label>
                                <input type="text" class="form-control" name="bathrooms"
                                value="<%- properties.bathrooms %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Garages</label>
                                <input type="text" class="form-control" name="garages"
                                value="<%- properties.garages %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Swimming Pool</label>
                                <input type="text" class="form-control" name="pool"
                                value="<%- properties.pool %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Year Built</label>
                                <input type="number" class="form-control" name="yearBuilt"
                                value="<%- properties.yearBuilt %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Available From</label>
                                <input type="date" class="form-control" name="availableFrom"
                                value="<%- properties.availableFrom %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Property Description</label>
                                <textarea class="form-control" rows="4" name="description"  ><%- properties.description %></textarea>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Property Image</label>
                                <input type="file" class="form-control" name="images" accept="image/*" multiple>
                              </div>
                            <input type="hidden" name="existingImage" value="<%- JSON.stringify(properties.image || {}) %>">

                            <div class="form-group">
                                <label>Current Image</label>
                                <div>
                                    <!-- Render the table here showing images in array -->
                                    
                                    <% if (properties.images && properties.images.length > 0) { %>
                                        <% properties.images.forEach(image => { %>
                                            <img class="propertimg" src="data:<%= image.contentType %>;base64,<%= image.data.toString('base64') %>">
                                        <% }); %>
                                    <% } else { %>
                                        No images to display
                                    <% } %>

                                </div>
                            </div>
 
                             <button type="submit" class="btn btn-primary mr-2">Submit</button>
                             <button class="btn btn-light">Cancel</button>
                           </form>
                         </div>
                    </div>
                </div>


                  
          
                

              
            

        
         </div>
      
         <%- include (`../partials/adminFooter`); -%>

        </div>

      </div>
 
    </div>

  
 

 

  </body>
</html>